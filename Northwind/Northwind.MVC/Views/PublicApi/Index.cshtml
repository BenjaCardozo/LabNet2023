@model Northwind.MVC.Models.ResultsPersonajesViewModel
@{
    ViewBag.Title = "Rick & Morty";
}

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var personaje in Model.results)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="@personaje.image" class="bd-placeholder-img rounded-circle" alt="Imagen Personaje">
                            <div class="card-body">
                                <h5 class="card-title">@personaje.name</h5>
                                <a href="@Url.Action("CharacterProfile", "PublicApi", new { id = personaje.id })" class="btn btn-outline-dark">Ver Perfil</a>
                            </div>
                        </div>
                    </div>

                }
        </div>
    </div>
</div>
